<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetCareApp.Views.AddPetPage"
             Title="Add Pet">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Add a New Pet"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Label Text="Name:" />
            <Entry x:Name="nameEntry" Placeholder="Pet name" />

            <Label Text="Type:" />
            <Entry x:Name="typeEntry" Placeholder="e.g., Dog, Cat, etc." />

            <Label Text="Birth Date:" />
            <DatePicker x:Name="birthDatePicker" />

            <Button Text="Save Pet" Margin="0,10,0,0" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>