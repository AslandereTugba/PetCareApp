<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PetCareApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PetCareApp"
    xmlns:views="clr-namespace:PetCareApp.Views"
    Title="PetCareApp">

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="main" />
    </FlyoutItem>

    <FlyoutItem Title="Pets">
        <ShellContent
            Title="Pets"
            ContentTemplate="{DataTemplate views:PetListPage}"
            Route="pets" />
    </FlyoutItem>

</Shell>
